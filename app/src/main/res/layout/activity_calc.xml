<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".calc.CalcActivity"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhaked Calculator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/equalColor"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:padding="15dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/displayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/displayBg"
                android:padding="24dp">

                <TextView
                    android:id="@+id/previousCalTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#80FFFFFF"
                    android:textSize="20sp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/resultCalTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#FFFFFFFF"
                    android:textSize="50sp"
                    android:maxLines="1"
                    android:text="0"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/displayCard"
            app:layout_constraintBottom_toBottomOf="parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="4"
                android:rowCount="5"
                android:padding="10dp">

                <!-- Row-1 -->
                <Button
                    android:id="@+id/btnClear"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="C"
                    android:background="@drawable/clear_button_bg"/>
                <Button
                    android:id="@+id/btnBackspace"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="⪡"
                    android:background="@drawable/button_operator_bg"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPercent"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="%"
                    android:background="@drawable/button_operator_bg"/>
                <Button
                    android:id="@+id/btnDivide"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="÷"
                    android:background="@drawable/button_operator_bg"/>


                <!-- Row-2 -->
                <Button
                    android:id="@+id/btn7"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="7"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btn8"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="8"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btn9"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="9"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btnMutiply"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="*"
                    android:background="@drawable/button_operator_bg"/>

                <!-- Row-3 -->
                <Button
                    android:id="@+id/btn4"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="4"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btn5"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="5"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btn6"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="6"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btnSubtract"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="–"
                    android:background="@drawable/button_operator_bg"/>

                <!-- Row-4 -->
                <Button
                    android:id="@+id/btn1"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="1"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btn2"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="2"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btn3"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="3"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btnAdd"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="+"
                    android:background="@drawable/button_operator_bg"/>

                <!-- Row-5 -->
                <Button
                    android:id="@+id/btn0"
                    style="@style/calculatorButton"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="0"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btnDot"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="•"
                    android:background="@drawable/button_bg"/>
                <Button
                    android:id="@+id/btnEqual"
                    style="@style/calculatorButton"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="="
                    android:background="@drawable/button_equal_bg"/>
            </GridLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>